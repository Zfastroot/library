<h1><%= book.title %></h1>
<div>
    <img height="450" width="300"  src="<%= book.coverImagePath %>" alt="<%= book.title %>">
    <p>
        Author:       <%= book.title %> <br>
        Publish Date : <%= book.publishDate.toISOString().split('T')[0] %> <br>
        page Count  :   <%= book.pageCount %> <br>
        Description :<br/>
        <%= book.description %>
    </p>
</div>
<div>
    <a href="/books/<%= book.id %>/edit">Edit</a>
    <a href="/authors/<%= book.author%>/">View Author</a>
    <%- include('../components/deleteForm.ejs',{url:`/books/${book.id}`}) %>
</div>
