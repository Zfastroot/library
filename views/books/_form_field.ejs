<div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= book.title %>">
</div>
<div>
    <label for="title">Author</label>
    <select name="author" id="author">
        <% authors.forEach(author =>{ %>
        <% if(author.id == book.author){ %>
            <option selected value="<%= author.id %>"label="<%= author.name %>"></option>
        <% }else { %>
            <option  value="<%= author.id %>"label="<%= author.name %>"><%= author.name %></option>
        <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label for="publishDate">Publish Date</label>
    <input type="date" name="publishDate" id="publishDate" 
    value="<%= book.publishDate == null? '': book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" min="1" name="pageCount" id="pageCount" value="<%= book.pageCount %>">
</div>
<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover" id="cover" class="filepond">
</div>
<div>
    <label for="description">Description</label>
    <textarea name="description" id="description"><%= book.description %></textarea>
</div>
 